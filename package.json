{
    "name": "ts-automata",
    "version": "0.5.1",
    "description": "Automata utility package for FSMs, PDAs, TMs in JS/TS.",
    "keywords": [
        "automata",
        "typescript",
        "math",
        "finite-state-machine",
        "pushdown-automaton",
        "turing-machine",
        "dfa",
        "nfa",
        "pda",
        "tm"
    ],
    "license": "MIT",
    "author": "Kiril Panayotov <contact@zakrok.dev> (https://zakrok.dev)",
    "homepage": "https://github.com/Zakrok09/ts-automata",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "type": "module",
    "files": [
        "dist",
        "package.json",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build": "tsc && vite build",
        "build:watch": "tsc && vite build --watch",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "prettier": "node --experimental-strip-types node_modules/prettier/bin/prettier.cjs . --write"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@fast-check/vitest": "^0.2.2",
        "@types/node": "^20.12.7",
        "@vitest/coverage-v8": "^3.2.3",
        "eslint": "^9.33.0",
        "jiti": "^2.5.1",
        "prettier": "3.6.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^3.2.3"
    },
    "dependencies": {
        "i": "^0.3.7"
    }
}
